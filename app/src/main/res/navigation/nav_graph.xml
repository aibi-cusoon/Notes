<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardFragment">

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.geeks.notes.ui.on_board.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            android:id="@+id/action_onBoardFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.geeks.notes.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />

    <action
        android:id="@+id/back"
        app:destination="@id/mainFragment"
        app:popUpTo="@id/onBoardFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/createNotesFragment"
        android:name="com.geeks.notes.ui.create_notes.CreateNotesFragment"
        android:label="fragment_create"
        tools:layout="@layout/fragment_create" />


</navigation>