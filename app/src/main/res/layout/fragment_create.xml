<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="20dp"
    tools:context=".ui.create_notes.CreateNotesFragment">

    <ImageView
        android:id="@+id/arrow_save"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="30 мая 17:21"
        android:textColor="@color/gray"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/arrow_save"
        app:layout_constraintTop_toTopOf="@id/arrow_save" />

    <ImageView
        android:id="@+id/options"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_title"
        app:layout_constraintTop_toBottomOf="@id/arrow_save"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Text"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"/>






</androidx.constraintlayout.widget.ConstraintLayout>